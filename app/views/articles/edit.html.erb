<h1> Edit existing article </h1>

<% if @article.errors.any? %>
<h3>The following errors prevented the article from being created:</h3>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
  <p> 
    <%= f.label :title %></br></br>
    <%= f.text_field :title %>
  </p>
  #rails should prefill the existing content in the form, since it is a model-backed form
  
  <p> 
    <%= f.label :description %></br></br>
    <%= f.text_area :description %>
  </p>
  
  <p> 
    <%= f.submit %>
  </p>
  
<% end %>

<%= link_to "Back to articles listing", articles_path %>